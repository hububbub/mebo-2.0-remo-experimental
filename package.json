{
  "name": "mebo-control-app",
  "version": "1.0.0",
  "description": "Portable desktop app to control the Mebo 2.0 robot",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --dir"
  },
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.mebo.control",
    "productName": "Mebo Control",
    "files": [
      "**/*"
    ],
    "asar": true,
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "portable",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}
