{
  "name": "mebo-control-app",
  "version": "1.0.0",
  "description": "Cross-platform desktop app to control the Mebo 2.0 robot",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "electron": "^28.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.mebo.control",
    "productName": "Mebo Control",
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "portable",    // âš¡ portable build instead of installer
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": ["AppImage"],  // AppImage = portable for Linux
      "icon": "build/icon.png",
      "category": "Utility"
    }
  }
}
