{
  "name": "mebo-control-app",
  "version": "1.0.0",
  "description": "Cross-platform desktop app to control the Mebo 2.0 robot (Windows portable)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64 --portable"
  },
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.6",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.mebo.control",
    "productName": "Mebo Control",
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": ["portable"],
      "icon": "build/icon.ico"
    }
  }
}
