{
  "name": "mebo-control-app",
  "version": "1.0.0",
  "description": "Windows-only portable Mebo 2.0 control app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64 --portable"
  },
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "axios": "^1.6.0"
  },
  "build": {
    "appId": "com.mebo.control",
    "productName": "Mebo Control",
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": ["portable"]
    }
  }
}
