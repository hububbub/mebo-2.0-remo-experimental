{
  "name": "mebo-control-app",
  "version": "1.0.0",
  "description": "Mebo robot control desktop app with AI integration",
  "main": "main.js",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder --win --x64"
  },
  "build": {
    "appId": "com.mebo.control",
    "productName": "MeboControl",
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "config.json",
      "index.html",
      "assets/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "win": {
      "target": "portable",
      "icon": "build/icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.6.0"
  },
  "dependencies": {
    "fs-extra": "^11.2.0"
  }
}
