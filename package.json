{
  "name": "mebo-control-app",
  "version": "1.0.0",
  "description": "Cross-platform desktop app to control the Mebo 2.0 robot (Windows portable only)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64"
  },
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.mebo.control",
    "productName": "Mebo Control",
    "files": [
      "src/**/*",
      "build/**/*",
      "config.json",
      "renderer.js",
      "index.html"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": ["portable"]
    }
  }
}
